---
import Logoface from '../assets/facebook.svg';
import LogoYouTube from '../assets/youtube.svg';
import LogoInstagram from '../assets/instagram.svg';
---

<style>

    footer {
        background: var(--nav-bg);
        display: flex;
        justify-content: space-between;

        & .footer-wrapper {
            display: flex;
            justify-content: space-evenly;
            align-items: center;
            padding: 20px;
            width: 100%;
            height: 25  0px;
            max-width: 1200px;
            margin: 0 auto;

            & p {   
                margin: 0;
            }

            & h4 {
                font-size: 20px;
            }
        }
    }

    .contact-area {
        display: flex;
        flex-direction: column;
        align-items: center;
        color: var(--text-color);

        & .mail-ibr {
            text-decoration: none;
            color: #555;
            font-weight: bold;
            margin-top: 10px;

            &:hover {
                color: var(--ibr-green);
            }
        }
    }

    .wrapper-social-ftcopy {
        display: flex;
        flex-direction: column;
        gap: 16px;  
    }

    .social-follow {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
        color: var(--text-color);

        & h4 {
            margin-bottom: 20px;
        }

        & .icons-wrapper {
            display: flex;
            gap: 40px;
            justify-content: center;
            align-items: center;
        }

        .social-icon {
            width: 25px;
            height: 25px;
            color: #555;
            transition: color 0.3s ease;

            &:hover {
                color: var(--ibr-green);
            }
        }
    }

    .footer-copy {
        text-align: center;
        padding: 10px 0;
        color: var(--text-color);

        & p {
            margin: 0;
        }
    }

</style>

