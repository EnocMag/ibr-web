---
import ButtonDropdown from "@/components/ButtonDropdown.astro";
import Logoface from '../assets/facebook.svg';
import LogoYouTube from '../assets/youtube.svg';
import LogoInstagram from '../assets/instagram.svg';

import { Image } from "astro:assets";
import logoIBR from "@/assets/Logo-IBR.jpg";

// Button dropdown items
const menuItemsNosotros = [ 
  { label: 'Historia', href: '/' },
  { label: 'Misión', href: '/' },
  { label: 'Visión', href: '/' },
  { label: 'Credo', href: '/' }
];
const menuItemsEscuelaDominical = [ 
  { label: 'Recursos', href: '/escuela-dominical/resources' },
  { label: 'Articulos', href: '/' }
];
---

<style>
    
    .top-bar-container {
        display: flex;
        justify-content: center;
        
        & .top-bar {
            position: fixed;
            display: flex;
            justify-content: space-evenly; /* Distribuye las secciones */
            align-items: center;            /* Centra verticalmente */
            gap: 100px;
            background-color: var(--nav-bg);
            border-radius: 0 0 10px 10px;
            padding: 5px 0;
            z-index: 1000;

            .icon-container {
                padding-left: 20px;

                & .icon-nav {
                    display: block;
                    width: 50px;
                    
                    & .logo {
                        width: 50px;
                        height: 50px;
                        border-radius: 50%;
                    }
                }
            }
            

            & .list-menu {
                
                display: flex;
                gap: 15px;

                & a {
                    color: #000;
                    padding: 10px 20px;
                    text-decoration: none;
                    border-radius: 5px;

                    &:hover {
                        background: var(--nav-bg-hover);
                        border-radius: 5px;
                        color: var(--nav-bg-hover-text);
                    } 
                }
            }

            
            & .icons-wrapper {
                display: flex;
                gap: 40px;
                justify-content: center;
                align-items: center;
                padding-right: 20px;

                & .social-icon {
                    width: 25px;
                    height: 25px;
                    color: #555;
                    transition: color 0.3s ease;

                    &:hover {
                        color: var(--ibr-green);
                    }
                }
            }
        }
    }

</style>

<div class="top-bar-container">
    <nav class="top-bar">

        
        <div class="icon-container">
            <a href="/" class="icon-nav">
                <Image src={logoIBR} alt="Logo de la iglesia" class="logo"/>
            </a>
        </div>

        <div class="list-menu">
            <a href="/">Inicio</a>
            <ButtonDropdown title="Nosotros" items={menuItemsNosotros} href="/nosotros"></ButtonDropdown>
            <a href="/servicios/">Servicios</a>
            <ButtonDropdown title="Escuela Dominical" items={menuItemsEscuelaDominical} href="/escuela-dominical"></ButtonDropdown> 
            <a href="/#ubicacion">Ubicación</a> <!-- TODO dar nuevo link -->
        </div>

        
        <div class="icons-wrapper">
            <a href="https://www.facebook.com/IBRTN/?locale=es_LA" target="_blank">
                <Logoface class="social-icon" fill="currentColor"/>
            </a>
            <a href="https://www.youtube.com/@IglesiaBautistaReformada-d1y" target="_blank">
                <LogoYouTube class="social-icon" fill="currentColor"/>
            </a>
            <a href="https://www.instagram.com/iglesiabautistareformadaibr/" target="_blank">
                <LogoInstagram class="social-icon" fill="currentColor"/>
            </a>
        </div>
        

    </nav>
</div>