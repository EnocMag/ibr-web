---
import ButtonDropdown from "@/components/ButtonDropdown.astro";
import Logoface from '../assets/facebook.svg';
import LogoYouTube from '../assets/youtube.svg';
import LogoInstagram from '../assets/instagram.svg';

import { Image } from "astro:assets";
import logoIBR from "@/assets/Logo-IBR.jpg";

// Button dropdown items
const menuItemsNosotros = [ 
  { label: 'Historia', href: '/' },
  { label: 'Misión', href: '/' },
  { label: 'Visión', href: '/' },
  { label: 'Credo', href: '/' }
];
const menuItemsEscuelaDominical = [ 
  { label: 'Recursos', href: '/escuela-dominical/resources' },
  { label: 'Articulos', href: '/' }
];
---

<style>
    
    .top-bar-container {
        position: fixed;
        display: flex;
        justify-content: center;
        width: 100%;
        height: 60px;
        background: var(--nav-bg);
        z-index: 999;
        
        & .top-bar {
            display: flex;
            justify-content: space-between; 
            align-items: center;
            width: 1000px;
            padding: 5px 0;

            .icon-container {
                padding-left: 20px;

                & .icon-nav {
                    display: block;
                    width: 50px;
                    
                    & .logo {
                        width: 50px;
                        height: 50px;
                        border-radius: 50%;
                    }
                }
            }
            

            & .list-menu {
                display: flex;
                gap: 15px;

                & a {
                    color: #000;
                    padding: 10px 20px;
                    text-decoration: none;
                    border-radius: 5px;

                    &:hover {
                        background: var(--nav-bg-hover);
                        border-radius: 5px;
                        color: var(--nav-bg-hover-text);
                    } 
                }
            }

            & .dropdown-menu {
                display: none;
                margin-right: 20px;

                & .menu-icon {
                    display: flex;
                    flex-direction: column;
                    justify-content: space-between;
                    width: 30px;
                    height: 20px;
                    cursor: pointer;
                    transition: transform 0.3s ease;
                    
                    & div {
                        width: 100%;
                        height: 4px;
                        background-color: var(--primary-500);
                        border-radius: 4px;
                        transition: transform 0.3s ease;
                    }
                    
                    &.open div:nth-child(1) {
                        transform: rotate(45deg);
                        position: relative;
                        top: 8px;
                    }
                    &.open div:nth-child(2) {
                        opacity: 0;
                    }
                    &.open div:nth-child(3) {
                        transform: rotate(-45deg);
                        position: relative;
                        top: -8px;
                    }
                }
            }

            @media screen and (max-width: 800px) {
                .dropdown-menu {
                    display: block;
                }
                .list-menu {
                    display: none;
                }
            }
        }
    }

    .mobile-menu {
        display: none;
        top: 0;
        left: 0;
        position: fixed;
        height: 100vh;
        width: 100vw;
        justify-content: center;
        background: #000c;
        z-index: 100;

        & .list-menu-mobile {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 20px;

            & a{
                text-decoration: none;
                font-size: 40px;
                color: var(--primary-100);
            }
        }
    }
</style>

<div class="top-bar-container">
    <nav class="top-bar">

        <div class="icon-container">
            <a href="/" class="icon-nav">
                <Image src={logoIBR} alt="Logo de la iglesia" class="logo"/>
            </a>
        </div>

        <div class="list-menu">
            <a href="/">Inicio</a>
            <ButtonDropdown title="Nosotros" items={menuItemsNosotros} href="/nosotros"></ButtonDropdown>
            <a href="/servicios/">Servicios</a>
            <ButtonDropdown title="Escuela Dominical" items={menuItemsEscuelaDominical} href="/escuela-dominical"></ButtonDropdown> 
            <a href="/#ubicacion">Ubicación</a> <!-- TODO dar nuevo link -->
        </div>

        <div class="dropdown-menu">
            <div class="menu-icon" onclick="toggleMenu(this)">
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>
    
    </nav>
</div>

<div id="mobile-menu" class="mobile-menu">
    <div class="list-menu-mobile">
        <a href="/">Inicio</a>
        <a id="item-menu" href="/nosotros">Nosotros</a>
        <a id="item-menu" href="/servicios">Servicios</a>
        <a id="item-menu" href="/escuela-dominical">Escuela Dominical</a>
        <a id="item-menu" href="/">Contactanos</a>
        <!-- <a href="">Contactanos</a> -->
    </div>
</div>


<script>
const dropdownMenuIcon = document.querySelector(".menu-icon");
const mobileMenu = document.getElementById("mobile-menu")
    if (dropdownMenuIcon && mobileMenu) {
        dropdownMenuIcon.addEventListener("click", () => {
            dropdownMenuIcon.classList.toggle("open");
            if (mobileMenu.style.display === "flex"){
                mobileMenu.style.display = "none";
            } else {
                mobileMenu.style.display = "flex";
            }
        });
    }
</script>