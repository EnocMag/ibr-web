---
import BaseLayout from "@/layouts/BaseLayout.astro";
import NavBar from "@/components/NavBar.astro";
---

<style>
    p {
        margin: 0;
        padding: 0;
    }
    ul {
        padding: 0;
    }

    .headline-wrapper {
        display: flex;
        justify-content: center;

        & .headline {
            font-size: calc(var(--general-font-size) * 1.3) ;
        }
    }

    .schedules-container {
        width: 100%;
        padding: 50px;
        display: flex;
        justify-content: center;
        font-size: 20px;

        & .wrapper {
            width: 795px;
            text-align: center;
        }
    }

    .list-service {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        padding: 20px;

        & .service {
            list-style-type: none;
            background: #EADED0 ;
            width: 270px;
            height: 270px;
            padding: 20px;
            padding-top: 15px;
            border-radius: 10px;
            
            & .service-title {
                width: 200px;
                font-weight: bold;
                text-align: start;

            }
            & .line {
                height: 2px;
                width: 125px;
                margin-top: 5px;
                transform: translate(-20px, 0);
                background: #000;
            }
            & .day {
                justify-self: start;
                font-size: 24px;
                margin-top: 15px;
            }
            & .hour {
                justify-self: start;
                font-weight: 700;
                font-size: 65px;
                display: inline;
                margin-right: 8px;
            }
        }
    }

    @media screen and (max-width: 990px) {
	.list-service {
		flex-direction: column;
	}
}

</style>

<BaseLayout title="Nuestros servicios" description="Esta es al descripción de la página Nosotros">
    <NavBar></NavBar>
    <div class="title-container">
        <h1>Nuestros Servicios</h1>
    </div>

    <div class="headline-wrapper">
        <p class="headline">Te invitamos a unirte a nosotros en nuestros tiempos de adoración y enseñanza.</p>
    </div>

    <div class="schedules-container">
        <div class="wrapper">
            <ul class="list-service">
                <li class="service">
                    <h2 class="service-title">Escuela Dominical</h2>
                    <div class="line"></div>
                    <p class="day">Domingo</p>
                    <p class="hour">9:30</p>
                    <span class="meridien">AM</span>
                    <!-- <p>(Clases para todas las edades)</p> -->
                </li>
                <li class="service">
                    <h2 class="service-title">Culto <br/> general</h2>
                    <div class="line"></div>
                    <p class="day">Domingo</p>
                    <p class="hour">11:00</p>
                    <span class="meridien">AM</span>
                </li>
                <li class="service">
                    <h2 class="service-title">Culto de Oración</h2>
                    <div class="line"></div>
                    <p class="day">Miércoles</p>
                    <p class="hour">7:00</p>
                    <span class="meridien">PM</span>
                </li>
            </ul>
        </div>
    </div>
</BaseLayout>