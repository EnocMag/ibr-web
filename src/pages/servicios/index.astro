<style>
    p {
        margin: 0;
        padding: 0;
    }
    ul {
        padding: 0;
    }

    .headline-wrapper {
        display: flex;
        justify-content: center;
        padding: 20px;

        & .headline {
            font-size: calc(var(--general-font-size) * 1.3) ;
        }
    }

    .schedules-container {
        width: 100%;
        padding: 50px;
        display: flex;
        justify-content: center;
        font-size: 20px;

        & .wrapper {
            width: 795px;
            text-align: center;
        }

        & .list-service {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            padding: 20px;
    
            & .service {
                list-style-type: none;
                background: #EADED0 ;
                width: 270px;
                height: 270px;
                padding: 20px;
                padding-top: 15px;
                border-radius: 10px;
                
                & .service-title {
                    width: 200px;
                    font-weight: bold;
                    text-align: start;
    
                }
                & .line {
                    height: 2px;
                    width: 125px;
                    margin-top: 5px;
                    transform: translate(-20px, 0);
                    background: #000;
                }
                & .day {
                    justify-self: start;
                    font-size: 24px;
                    margin-top: 15px;
                }
                & .hour {
                    justify-self: start;
                    font-weight: 700;
                    font-size: 65px;
                    display: inline;
                    margin-right: 8px;
                }
            }
        }
    }

    @media screen and (max-width: 990px) {
        .list-service {
            flex-direction: column;
        }

    }

    .church-calendar {
        width: 100%;
        height: fit-content;
        background: lightblue;
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;

        & .event {
            width: 900px;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
            background: rgba(240, 128, 128, 0.466);
            border-radius: 10px;

            & .event-title {
                font-size: 35px;
            }

            & .event-container {
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 20px;

                & .img-event {
                    width: 300px;
                    height: 450px;
                    border-radius: 10px;
                    align-self: start;
                }
                
                & .event-content {
                    display: flex;
                    flex-direction: column;

                    & .date-event {

                    }
            
                    & .event-theme {
                        margin-block: 1lh;

                        & p {
                            margin: 5px;
                        }
                        
                        & > p:last-of-type {
                            font-weight: bold;
                        }
                    }
                }
            }
        }
    }

</style>

