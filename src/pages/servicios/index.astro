---
import BaseLayout from "@/layouts/BaseLayout.astro";
import NavBar from "@/components/NavBar.astro";
---

<style>
    p {
        margin: 0;
        padding: 0;
    }
    ul {
        padding: 0;
    }

    .headline-wrapper {
        display: flex;
        justify-content: center;

        & .headline {
            font-size: calc(var(--general-font-size) * 1.3) ;
        }
    }

    .schedules-container {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 50px;
        font-size: 20px;

        & .wrapper {
            width: 795px;
            text-align: center;
        }
    }

    .list-service {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        padding: 20px;

        & .service {
            list-style-type: none;
            background: linear-gradient(var(--primary-200) , var(--primary-300)) ;
            width: 350px;
            height: 130px;
            padding: 10px;
            border-radius: 10px;
            border: solid 2px var(--primary-500);
            
            & span {
                font-weight: bold;
            }
        }
    }

    @media screen and (max-width: 990px) {
	.list-service {
		flex-direction: column;
	}
}

</style>

<BaseLayout title="Nuestros servicios" description="Esta es al descripción de la página Nosotros">
    <NavBar></NavBar>
    <div class="title-container">
        <h1>Nuestros Servicios</h1>
    </div>

    <div class="headline-wrapper">
        <p class="headline">Te invitamos a unirte a nosotros en nuestros tiempos de adoración y enseñanza.</p>
    </div>

    <div class="schedules-container">
        <div class="wrapper">
            <h2>Domingo</h2>
            <ul class="list-service">
                <li class="service">
                    <span>Escuela Dominical:</span>
                    <p>9:30 am</p>
                    <p>(Clases para todas las edades)</p>
                </li>
                <li class="service">
                    <span>Culto general:</span>
                    <p>11:00 am</p>
                </li>
            </ul>
            <h2>Miércoles</h2>
            <ul class="list-service">
                <li class="service">
                    <span>Culto de Oración:</span>
                    <p>7:00 pm</p>
                </li>
            </ul>
        </div>
    </div>
</BaseLayout>